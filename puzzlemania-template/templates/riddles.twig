{% extends "base.twig" %}

{% block title %}Riddles | PuzzleMania{% endblock %}

{#
{% block styles %}
    <link rel="stylesheet" href="../public/assets/css/riddles.css">
{% endblock %}
#}
{% block content %}

    {% if riddleslist == true %}
        <h1>Riddles List</h1>
    {% else %}
        <h1>Riddle Info</h1>
    {% endif %}

    {% if riddleExists == false and riddleslist == false %}
        <p>Riddle with id {{ riddle.id }} does not exist</p>
    {% endif %}

    {% if riddles == null and riddleExists != false %}
        <riddles-empty>
            <p>There are no riddles yet!</p>
        </riddles-empty>
    {% else %}
        <div id="riddles-list">
            <ul>
                {% for riddle in riddles %}
                    <li>{{ riddle.riddle }}</li>
                    <li>{{ riddle.answer }}</li>
                    <br><br>
                {% endfor %}
            </ul>
        <div>
    {% endif %}

{% endblock %}