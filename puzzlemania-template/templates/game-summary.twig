{% extends "base.twig" %}

{% block title %}Game | PuzzleMania{% endblock %}

{% block content %}
{% if gameOver %}
    <h1>Game summary</h1>
    <p>You have completed the last riddle!</p>
    <h2>Total score</h2>
    <p>{{ totalScore }}</p>
{% else %}
    <h1>Riddle #{{ data.riddleNum }}</h1>
    <p>{{ data.riddle }}</p>
    <h2>{{ data.answerStatus }} answer!</h2>
    {% if data['answer'] %}
        <p class="error-message">The right answer is: <b>{{ data.answer }}</b></p>
    {% endif %}
{% endif %}
    <button onclick="location.href='{{ buttonHref }}'" class="primary-button">{{ buttonValue }}</button>
{% endblock %}